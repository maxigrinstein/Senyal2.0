---
import { Image } from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import ProductsService from "@/services/products.service";
const params = Astro.params as { id: string };
const product = await ProductsService.getProduct(params.id);
if (!product) return Astro.redirect("/404");
import { Icon } from "astro-icon/components";
---

<Layout title={product.title}>
    <div class="bg-neutral-100 flex flex-col p-10">
        <div class="flex flex-row gap-2 items-center py-5 hover:underline">
            <Icon name="arrow" color="black" />
            <a href="/">
                <button class="text-zinc-900"> Volver al inicio </button>
            </a>
        </div>
        <div class="flex flex-row">
            <img
                src={product.image}
                alt={product.title}
                class="w-1/3 h-auto rounded-lg"
            />
            <div class="px-10 flex flex-col justify-between">
                <div>
                    <h1 class="text-2xl font-bold text-neutral-950">
                        {product.title}
                    </h1>
                    <p class="text-lg mt-2 text-black font-">
                        {product.description}
                    </p>
                </div>

                <!-- <button
                    class="bg-neutral-500 w-full hover:bg-neutral-600 transition-all duration-300 text-white py-2 rounded-md text-lg mt-5"
                    >Volver a inicio</button
                > -->
            </div>
        </div>
    </div>
</Layout>
